<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_header_height"
        android:background="@color/background"
        android:gravity="center"
        android:text="@string/attention"
        android:textColor="@color/white"
        android:textSize="@dimen/popup_header_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="normal"
            android:text="@string/feedback_text"
            android:textColor="@color/black"
            android:textSize="@dimen/popup_body_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/feedback_yes"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/send_feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_up_ok_cancel_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feedback_ask_me_later"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/rate_ask_me_later"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_up_ok_cancel_text_size" />


        <TextView
            android:id="@+id/feedback_no_thanks"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="0.2dp"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/rate_no_thanks"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_up_ok_cancel_text_size"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</LinearLayout>
