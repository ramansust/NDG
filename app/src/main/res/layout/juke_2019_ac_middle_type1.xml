            app:layout_constraintBottom_toBottomOf="@+id/button37"
            app:layout_constraintEnd_toStartOf="@+id/button37"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintStart_toEndOf="@+id/button40" />

