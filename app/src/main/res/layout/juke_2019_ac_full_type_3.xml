<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popupLayout"
        android:layout_width="350dp"
        android:layout_height="100dp"
        tools:background="@drawable/juke_ac_auto_full_type3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/btn_auto_ac_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.40"
            android:background="@android:color/transparent"
            android:onClick="buttonEventInitial"
            android:tag="10001" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_auto_ac_middle_type_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.20"
            android:background="@android:color/transparent"
            android:onClick="buttonEventInitial"
            android:tag="10003" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_auto_ac_right2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.40"
            android:background="@android:color/transparent"
            android:onClick="buttonEventInitial"
            android:tag="10002" />
    </LinearLayout>

</LinearLayout>