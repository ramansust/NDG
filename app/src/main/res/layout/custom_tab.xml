<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_back"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginRight="@dimen/margin_left"
    android:layout_marginTop="@dimen/margin_back"
    android:background="@color/tab_background_unselected"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/iv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />
    <!-- Tab title -->
    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TAB"
        android:textAllCaps="true"
        android:textColor="@color/tab_indicator_unselected"
        android:textSize="@dimen/tab_title" />

</LinearLayout>
