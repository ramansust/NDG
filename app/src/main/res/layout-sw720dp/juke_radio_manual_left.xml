                android:layout_height="match_parent"
                android:layout_weight=".2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:clickable="true"
                android:onClick="buttonEvent"
                android:tag="62"
                android:focusable="true" />

            <TextView
