<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nissan.alldriverguide.LanguageSelectionActivity">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_size"
        android:layout_alignParentTop="true"
        android:background="@color/orange"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nissan_brand_bold"
            android:paddingStart="@dimen/tutorial_title"
            android:paddingEnd="@dimen/tutorial_title"
            android:text="@string/select_your_car"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_text_size_title" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbCarDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <include
        android:id="@+id/lst_view"
        layout="@layout/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_top" />


</RelativeLayout>
