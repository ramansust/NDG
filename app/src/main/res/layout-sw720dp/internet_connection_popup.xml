<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_left"
            android:layout_weight="1"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/internet_connect"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_text_size_title"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/dialog_button_separator"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_back">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/background"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
