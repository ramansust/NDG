            android:onClick="buttonEvent"
            android:tag="84"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@android:color/transparent"
            android:onClick="buttonEvent"
            android:tag="83"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:onClick="buttonEvent"
            android:tag="82"/>

    </LinearLayout>
</LinearLayout>