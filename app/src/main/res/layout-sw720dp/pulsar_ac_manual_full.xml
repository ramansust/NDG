<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popupLayout"
        android:layout_width="700dp"
        android:layout_height="330dp"

        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".19"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_ac_manual_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:clickable="true"
                android:onClick="buttonEventInitial"
                android:orientation="vertical"
                android:tag="20001"></LinearLayout>

            <LinearLayout
                android:id="@+id/btn_ac_manual_middle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:clickable="true"
                android:onClick="buttonEventInitial"
                android:orientation="vertical"
                android:tag="20002"></LinearLayout>

            <LinearLayout
                android:id="@+id/btn_ac_manual_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:clickable="true"
                android:onClick="buttonEventInitial"
                android:orientation="vertical"
                android:tag="20003"></LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</LinearLayout>