<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/attention"
            android:textColor="@color/white"
            android:textSize="@dimen/popup_header_text_size" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="body"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_text_size_title"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="center">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/ok_cancel_popup_width"
                android:layout_height="@dimen/ok_cancel_popup_height"
                android:layout_marginTop="1dp"
                android:background="@color/background"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/button_CANCEL"
                android:textColor="@color/white"
                android:textSize="@dimen/pop_up_ok_cancel_text_size"
                android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="center">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="@dimen/ok_cancel_popup_width"
                android:layout_height="@dimen/ok_cancel_popup_height"
                android:layout_marginTop="1dp"
                android:background="@color/background"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/button_OK"
                android:textColor="@color/white"
                android:textSize="@dimen/pop_up_ok_cancel_text_size"
                android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
