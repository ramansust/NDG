<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/popup_header_height_720dp"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/attention"
            android:textColor="@color/white"
            android:textSize="@dimen/popup_header_text_size_720dp" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_left"
            android:background="@color/white"
            android:gravity="center"
            android:text="body"
            android:textColor="@color/black"
            android:textSize="@dimen/popup_body_text_size_720dp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageButton
                    android:id="@+id/btn_eur"
                    android:layout_width="@dimen/ok_cancel_popup_width_720dp"
                    android:layout_height="@dimen/ok_cancel_popup_height_720dp"
                    android:layout_marginEnd=".2dp"
                    android:layout_marginRight=".2dp"
                    android:background="@color/background"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/button_eur"
                    android:textSize="@dimen/pop_up_ok_cancel_text_size_720dp" />

                <ImageButton
                    android:id="@+id/img_btn_eur_delete_donwload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="@dimen/margin_back"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/delete_selector"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageButton
                    android:id="@+id/btn_rus"
                    android:layout_width="@dimen/ok_cancel_popup_width_720dp"
                    android:layout_height="@dimen/ok_cancel_popup_height_720dp"
                    android:layout_marginLeft=".2dp"
                    android:layout_marginStart=".2dp"
                    android:background="@color/background"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_rus"
                    android:textSize="@dimen/pop_up_ok_cancel_text_size_720dp" />

                <ImageButton
                    android:id="@+id/img_btn_rus_delete_donwload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="@dimen/margin_back"
                    android:background="@drawable/delete_selector"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
