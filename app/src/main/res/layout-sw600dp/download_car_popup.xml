<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="fasdfa"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_text_size_title"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_left"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/gray"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_eur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight=".5dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_eur"
                    android:textSize="@dimen/activity_horizontal_margin" />

                <ImageButton
                    android:id="@+id/img_btn_eur_delete_donwload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_back"
                    android:background="@drawable/delete_selector"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/gray"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_rus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_rus"
                    android:textSize="@dimen/activity_horizontal_margin" />

                <ImageButton
                    android:id="@+id/img_btn_rus_delete_donwload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_back"
                    android:background="@drawable/delete_selector"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
